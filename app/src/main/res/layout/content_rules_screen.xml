<?xml version="1.0" encoding="utf-8"?>
<!--Ohjeet-ruutu-->
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/mainmenu"
        tools:context="com.code.classes.RulesScreen">

    <!--Takaisin-napin kuva-->
    <ImageView
            android:layout_width="109dp"
            android:layout_height="86dp" app:srcCompat="@drawable/takaisinnappi"
            android:id="@+id/imageView5"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"/>
    <!--Takaisin-painike-->
    <Button
            android:layout_width="132dp"
            android:layout_height="111dp"
            android:background="@android:color/transparent"
            android:id="@+id/backButton2"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
    />
    <!--Ohjeet-kuva-->
    <ImageView
            android:layout_width="102dp"
            android:layout_height="34dp" app:srcCompat="@drawable/ohjeet"
            android:id="@+id/imageView6" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintVertical_bias="0.186"/>
    <!--Tekstikentt채, joka sis채lt채채 pelin ohjeet-->
    <TextView
            android:text="@string/saannot"
            android:layout_width="269dp"
            android:layout_height="319dp"
            android:background="@android:color/background_light"
            android:scrollbars="vertical"
            android:id="@+id/saantoTeksti" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.527" android:textStyle="bold" android:textColor="#000000"/>
</android.support.constraint.ConstraintLayout>
